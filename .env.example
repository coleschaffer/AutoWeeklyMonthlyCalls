# ===========================================
# CA Pro Automation - Environment Variables
# ===========================================

# Zoom API (Server-to-Server OAuth)
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_WEBHOOK_SECRET=your_zoom_webhook_secret_token

# Google APIs (OAuth 2.0)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
YOUTUBE_CHANNEL_ID=your_youtube_channel_id
DRIVE_FOLDER_ID=your_main_drive_folder_id
DRIVE_WEEKLY_FOLDER_ID=your_weekly_calls_folder_id
DRIVE_MONTHLY_FOLDER_ID=your_monthly_calls_folder_id

# ActiveCampaign
ACTIVECAMPAIGN_API_URL=https://youraccountname.api-us1.com
ACTIVECAMPAIGN_API_KEY=your_activecampaign_api_key
ACTIVECAMPAIGN_LIST_ID=your_list_id

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
WHATSAPP_GROUP_NUMBERS=+1234567890,+0987654321

# Circle Community
CIRCLE_API_KEY=your_circle_api_key
CIRCLE_COMMUNITY_ID=your_community_id
CIRCLE_SPACE_ID=your_space_id

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Application
PORT=3000
NODE_ENV=development
RAILWAY_PUBLIC_DOMAIN=your-app.railway.app

# Call Configuration
WEEKLY_CALL_DAY=2
WEEKLY_CALL_HOUR=13
MONTHLY_CALL_WEEK=4
MONTHLY_CALL_DAY=1
MONTHLY_CALL_HOUR=14
TIMEZONE=America/New_York
